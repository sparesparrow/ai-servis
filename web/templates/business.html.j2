<!DOCTYPE html>
<html lang="{{ language }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ content.page.title[language] }}</title>
    <meta name="description" content="{{ content.page.description[language] }}">
    <style>
        body { font-family: Arial, sans-serif; margin: 0; padding: 20px; }
        .container { max-width: 1200px; margin: 0 auto; }
        .header { background: #333; color: white; padding: 20px; margin-bottom: 20px; }
        .nav { display: flex; gap: 20px; margin-bottom: 20px; }
        .nav a { color: #333; text-decoration: none; padding: 10px; border: 1px solid #ddd; }
        .nav a:hover { background: #f0f0f0; }
        .section { margin-bottom: 30px; }
        .section h2 { color: #333; border-bottom: 2px solid #333; padding-bottom: 10px; }
        .pricing-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px; }
        .pricing-card { border: 1px solid #ddd; padding: 20px; border-radius: 8px; }
        .pricing-card.featured { border-color: #007bff; background: #f8f9fa; }
        .price { font-size: 24px; font-weight: bold; color: #007bff; }
        .footer { background: #333; color: white; padding: 20px; margin-top: 40px; }
    </style>
</head>
<body>
    <div class="container">
        <header class="header">
            <h1>{{ content.page.title[language] }}</h1>
            <p>{{ content.page.description[language] }}</p>
        </header>
        
        <nav class="nav">
            {% for key, nav_item in content.navigation.items() %}
            <a href="#{{ key }}">{{ nav_item[language] }}</a>
            {% endfor %}
        </nav>
        
        <main>
            {% if content.hero %}
            <section class="section">
                <h2>{{ content.hero.aipowered_business_vehicle_intelligence[language] if content.hero.aipowered_business_vehicle_intelligence else 'Hero Section' }}</h2>
                <p>{{ content.hero.productivity_boost[language] if content.hero.productivity_boost else 'Productivity boost description' }}</p>
            </section>
            {% endif %}
            
            {% if content.features %}
            <section class="section">
                <h2>{{ content.features.professional_features[language] if content.features.professional_features else 'Features' }}</h2>
                <ul>
                    {% for key, feature in content.features.items() %}
                    <li>{{ feature[language] if feature is mapping else feature }}</li>
                    {% endfor %}
                </ul>
            </section>
            {% endif %}
            
            {% if content.pricing %}
            <section class="section">
                <h2>{{ content.pricing.business_pricing[language] if content.pricing.business_pricing else 'Pricing' }}</h2>
                <div class="pricing-grid">
                    {% for key, pricing_item in content.pricing.items() %}
                    {% if key.startswith('price_') or key in ['business_starter', 'business_professional', 'enterprise_fleet'] %}
                    <div class="pricing-card {% if 'most_popular' in pricing_item or 'most_protected' in pricing_item %}featured{% endif %}">
                        <h3>{{ pricing_item[language] if pricing_item is mapping else pricing_item }}</h3>
                        {% if key.startswith('price_') %}
                        <div class="price">{{ pricing_item[language] if pricing_item is mapping else pricing_item }}</div>
                        {% endif %}
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </section>
            {% endif %}
        </main>
        
        <footer class="footer">
            <p>{{ content.footer.copyright[language] if content.footer.copyright else 'Â© 2025 AI-SERVIS. All rights reserved.' }}</p>
        </footer>
    </div>
</body>
</html>