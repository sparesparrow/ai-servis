# AI-SERVIS UI Abstraction Module - Development Dockerfile
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies including development tools
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    git \
    curl \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies including development tools
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir \
    pytest \
    pytest-asyncio \
    pytest-cov \
    black \
    flake8 \
    mypy \
    ipython \
    jupyter

# Copy application code
COPY . .

# Create non-root user
RUN useradd -m -u 1000 uiabstraction && \
    chown -R uiabstraction:uiabstraction /app

# Switch to non-root user
USER uiabstraction

# Expose ports for all interfaces
EXPOSE 8081 8082 8083 8084

# Set environment variables for development
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV LOG_LEVEL=DEBUG
ENV VOICE_INTERFACE_ENABLED=true
ENV TEXT_INTERFACE_ENABLED=true
ENV WEB_INTERFACE_ENABLED=true
ENV MOBILE_INTERFACE_ENABLED=true

# Start the UI abstraction manager with hot reloading
CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]
