# AI-Servis Environment Configuration
# Copy this file to .env and configure for your environment

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
PYTHON_ENV=development
LOG_LEVEL=DEBUG

# Service Discovery
MCP_DISCOVERY_PORT=8080
DISCOVERY_PORT=8090

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
POSTGRES_DB=aiservisdwxb
POSTGRES_USER=aiservispdev
POSTGRES_PASSWORD=aiservislicdbdev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# MESSAGE BROKER
# =============================================================================

# MQTT Broker
MQTT_BROKER=mqtt-broker:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=ai-servis-core

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Spotify Integration
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here

# OpenAI (if using)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Grafana
GRAFANA_PASSWORD=admin
GRAFANA_ADMIN_USER=admin

# Prometheus
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# AlertManager
ALERT_WEBHOOK_URL=your-webhook-url-here
SLACK_WEBHOOK_URL=your-slack-webhook-url-here
SMTP_PASSWORD=your-smtp-password-here

# Jaeger
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =============================================================================
# SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h

# API Keys
API_KEY_CORE=your-core-api-key-here
API_KEY_AUDIO=your-audio-api-key-here
API_KEY_PLATFORM=your-platform-api-key-here

# =============================================================================
# HARDWARE CONFIGURATION
# =============================================================================

# Raspberry Pi GPIO
GPIO_SIMULATION=false
PI_DEVICE_ID=pi-gateway-001

# ESP32 Configuration
ESP32_OBD_DEVICE_ID=esp32-obd-001
ESP32_IO_DEVICE_ID=esp32-io-001
ESP32_CAM_DEVICE_ID=esp32-cam-001

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Hot Reloading
HOT_RELOAD=true
AUTO_RELOAD=true

# Debug Configuration
DEBUG=true
DEBUG_PORT_CORE=5678
DEBUG_PORT_DISCOVERY=5679
DEBUG_PORT_AUDIO=5680
DEBUG_PORT_PLATFORM=5681

# Development Tools
ENABLE_DOCS=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# Container Registry
REGISTRY=ghcr.io/ai-servis
IMAGE_TAG=latest

# Build Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Resource Limits
MAX_WORKERS=4
WORKER_TIMEOUT=30
MAX_CONNECTIONS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_AUDIO_ASSISTANT=true
ENABLE_PLATFORM_CONTROLLER=true
ENABLE_ESP32_INTEGRATION=true
ENABLE_VEHICLE_SIMULATION=true
ENABLE_GPIO_SIMULATION=true

# Experimental Features
ENABLE_ML_INFERENCE=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_BLOCKCHAIN_INTEGRATION=false

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-here
BACKUP_S3_REGION=us-east-1

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================

# GDPR Configuration
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
ANONYMIZATION_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=90
